<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Intake</title>
    {{
      include("partials/assets")
    }}
  </head>
  <body class="d-flex flex-column h-100">
    {{ include("partials/header") }}
    <main class="container mt-4">
      <h1>Add Calorie Intake</h1>
      <form class="mt-5" id="addIntake">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" name="name" id="foodItemNameInput" />
        </div>
        <div class="mb-3">
          <label for="date_time" class="form-label">Date Time</label>
          <input type="datetime-local" class="form-control" name="date_time" />
        </div>
        <div class="mb-3">
          <label for="calories" class="form-label">Calories</label>
          <input type="text" class="form-control" name="calories" id="foodItemCalorieInput" />
        </div>
        <button type="submit" class="btn btn-primary">Add Intake</button>
      </form>
    </main>
    {{ include("partials/footer") }}
  </body>
</html>
